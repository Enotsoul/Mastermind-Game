    public void fillLobby(Lobby lobby) {
        modelLobby.clear();//always clear the lobby list first
        System.out.println("refreshing lobby!!!!");
       //one simple option would be:D
        //lstPlayers.setListData(lobby.getOnlinePlayers().toArray());

         for (OnlinePlayer op : lobby.getOnlinePlayers()) {
                modelLobby.addElement(op);

               
          }
         //set the model..
         lstPlayers.setModel(modelLobby);
         lstPlayers.setForeground(Color.GREEN);

    }

